 <div id="burger-app">                   

 <div class="container">  
     <div id="header">
        {{!-- <div class="jumbotron jumbotron-fluid"> --}}
            <h1 id="heading1">Eat Da Burger!</h1>           
            <p>Order Delicious Burgers...</p>
            {{!-- <p class="lead text-center" id="header1">Order Delicious Burgers...</p> --}}
            <div id="image">
            <img src="/assets/img/Beefb.png">
            </div>
        </div>
       

    <div class="container">
        <div class="row">
            <div id="add" class="col-xs-6" "text-center enter_section" >   
                <form action="/burgers/create" method="POST"> 
                    <input type="text" name="burger_name" class="form-control" 
                    value"" id="enter_text"> 
                    <br>   
                    <button type="submit" class="btn btn-primary" id="submit-button">SUBMIT</button>                      
                </form>
                <br>
                <p>"Which Burger would you like to Eat?"</p>
            </div>
        </div>
    </div>
</div>
    
    
    <div class="row">
        <div class="col-xs-6 text-center" class="task"> 
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}        
                <div class="col-xs-9 text-center"> 
                    <div id="uneaten-burger">{{this.id}}. {{this.burger_name}}</div>
                </div>  
            
                <div class="col-xs-3 text-center">                  
                    <form method="POST" action="/burgers/update?_method=PUT" 
                        class="button-size">
                        <input type="hidden" name="burger_id" type="text"
                        value={{this.id}}> 
                        <br>                       
                        <button type="submit" class="btn btn-default" id="eat-it">DEVOUR IT! <i class="fas fa-thumbs-up"></i></button>                         
                    </form>                                       
                </div>
                    {{/unless}}
                {{/each}}  
            </div>
        </div>
       
  
        <div class="col-xs-4" "text-center" class="task" id="devoured">     
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder=
                    "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
            <hr>
        </div>
    </div>  
</div>  
                    
    
 










