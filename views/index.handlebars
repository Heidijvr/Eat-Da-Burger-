<div class="container>

<img src="assets/images/burger2.jpeg" alt="burger">
    <div class="row">
        {{#each burgers_data}}
            {{#unless this.devoured}}        
                <div class="col-xs-9 text-center"> 
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form-method="POST" action="/burgers/update?_method=PUT" 
                        class="button-size">
                            <input type="hidden" name="burger_id" type="text"
                            value={{this.id}}>                        
                            <button type="submit" class="btn btn-default">Devour It!</button>
                        
                    </form-method>  
                </div>
            {{/unless}}
        {{/each}}    
    </div>


        <div class="col-xs-6" "text-center" class="task">     
            {{#each burgers_data}}
            {{#if this.devoured}}
                <input class="form-control" type="text" placeholder=
                "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>  
</div>  
            
                     
<div class="container">
    <div class="row">
        <div class="col-xs-12" "text-center enter_section">   
            <form action="/burgers/create" method="POST"> 
                <input type="text" name="burger_name" class="form-control" value"" id="enter_text">    
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>  
            </form>
            <p>"Which Burger would you like to Eat?"</p>
        </div>
    </div>
</div>